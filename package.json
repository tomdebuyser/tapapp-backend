{
    "name": "silvernext",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "NODE_ENV=local nest start --watch",
        "start:dev:clean": "yarn db:drop && yarn migrate && yarn seed && yarn start:dev",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/silvernext/main",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "format:check": "prettier -c \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:fix": "prettier -c  --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "test": "NODE_ENV=test jest",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:cov": "NODE_ENV=test jest --coverage",
        "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "docker:start": "docker-compose -f ./docker/docker-compose.yml up -d",
        "docker:stop": "docker-compose -f ./docker/docker-compose.yml stop",
        "migrate": "yarn typeorm migration:run -f ./data/ormconfig-cli.js",
        "migrate:revert": "yarn typeorm migration:revert -f ./data/ormconfig-cli.js",
        "migration:generate": "yarn typeorm migration:generate -f ./data/ormconfig-cli.js",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "db:drop": "yarn typeorm schema:drop -f ./data/ormconfig-cli.js",
        "db:rollup": "yarn db:drop && yarn run migrate",
        "seed:all": "yarn run seed && yarn run seed:prod",
        "seed": "yarn run typeorm migration:run -f ./data/ormconfig-cli.js -c seeds",
        "seed:generate": "yarn run typeorm migration:create -f ./data/ormconfig-cli.js -c seeds",
        "seed:revert": "yarn run typeorm migration:revert -f ./data/ormconfig-cli.js -c seeds",
        "seed:prod": "yarn run typeorm migration:run -f ./data/ormconfig-cli.js -c seeds-prod",
        "seed:prod:generate": "yarn run typeorm migration:create -f ./data/ormconfig-cli.js -c seeds-prod",
        "seed:prod:revert": "yarn run typeorm migration:revert -f ./data/ormconfig-cli.js -c seeds-prod"
    },
    "dependencies": {
        "@nestjs/common": "^6.11.11",
        "@nestjs/core": "^6.11.11",
        "@nestjs/jwt": "^6.1.2",
        "@nestjs/passport": "^6.2.0",
        "@nestjs/platform-express": "^6.11.11",
        "@nestjs/swagger": "^4.3.2",
        "@nestjs/typeorm": "^6.3.3",
        "@sentry/node": "^5.13.1",
        "bcrypt": "^4.0.1",
        "chalk": "^3.0.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "compression": "^1.7.4",
        "connect-redis": "^4.0.3",
        "date-fns": "^2.10.0",
        "dotenv-safe": "^8.2.0",
        "express-rate-limit": "^5.1.1",
        "express-session": "^1.17.0",
        "helmet": "^3.21.3",
        "logform": "^2.1.2",
        "mandrill-api": "^1.0.45",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "pg": "^7.18.2",
        "ramda": "^0.27.0",
        "rate-limit-redis": "^1.7.0",
        "redis": "^3.0.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "ts-mockito": "^2.5.0",
        "typeorm": "^0.2.24",
        "uuid": "^7.0.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^6.14.2",
        "@nestjs/schematics": "^6.9.4",
        "@nestjs/testing": "^6.11.11",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.7.0",
        "@types/connect-redis": "^0.0.13",
        "@types/dotenv-safe": "^8.1.0",
        "@types/express": "^4.17.3",
        "@types/express-rate-limit": "^5.0.0",
        "@types/faker": "^4.1.10",
        "@types/helmet": "^0.0.45",
        "@types/jest": "^25.1.3",
        "@types/mandrill-api": "^1.0.30",
        "@types/node": "^13.7.7",
        "@types/passport": "^1.0.2",
        "@types/passport-local": "^1.0.33",
        "@types/ramda": "^0.26.43",
        "@types/rate-limit-redis": "^1.7.1",
        "@types/redis": "^2.8.16",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^7.0.0",
        "@typescript-eslint/eslint-plugin": "^2.22.0",
        "@typescript-eslint/parser": "^2.22.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "faker": "^4.1.0",
        "jest": "^25.1.0",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "swagger-ui-express": "^4.1.3",
        "ts-jest": "^25.2.1",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "@libs/logger/(.*)": "<rootDir>/libs/logger/src/$1",
            "@libs/logger": "<rootDir>/libs/logger/src",
            "@libs/mailer/(.*)": "<rootDir>/libs/mailer/src/$1",
            "@libs/mailer": "<rootDir>/libs/mailer/src",
            "@libs/database/(.*)": "<rootDir>/libs/database/src/$1",
            "@libs/database": "<rootDir>/libs/database/src",
            "@libs/common/(.*)": "<rootDir>/libs/common/src/$1",
            "@libs/common": "<rootDir>/libs/common/src"
        }
    }
}
