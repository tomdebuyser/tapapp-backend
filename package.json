{
  "name": "silvernext",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format:check": "prettier -c \"**/*.ts\"",
    "format:fix": "prettier -c  --write \"**/*.ts\"",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "NODE_ENV=local nest start --watch",
    "start:dev:clean": "yarn db:drop && yarn db:migrate && yarn db:seed:all && yarn start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/silvernext/main",
    "test": "NODE_ENV=test jest --maxWorkers=2",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docker:start": "docker-compose -f ./docker/docker-compose.yml up -d",
    "docker:stop": "docker-compose -f ./docker/docker-compose.yml stop",
    "db": "ts-node ./node_modules/typeorm/cli.js",
    "db:migrate": "yarn db migration:run -f ./data/ormconfig-cli.js",
    "db:migrate:revert": "yarn db migration:revert -f ./data/ormconfig-cli.js",
    "db:migrate:generate": "yarn db migration:generate -f ./data/ormconfig-cli.js",
    "db:drop": "yarn db schema:drop -f ./data/ormconfig-cli.js",
    "db:rollup": "yarn db:drop && yarn run db:migrate",
    "db:seed:all": "yarn run db:seed:prod && yarn run db:seed",
    "db:seed": "yarn run db migration:run -f ./data/ormconfig-cli.js -c seeds",
    "db:seed:generate": "yarn run db migration:create -f ./data/ormconfig-cli.js -c seeds",
    "db:seed:revert": "yarn run db migration:revert -f ./data/ormconfig-cli.js -c seeds",
    "db:seed:prod": "yarn run db migration:run -f ./data/ormconfig-cli.js -c seeds-prod",
    "db:seed:prod:generate": "yarn run db migration:create -f ./data/ormconfig-cli.js -c seeds-prod",
    "db:seed:prod:revert": "yarn run db migration:revert -f ./data/ormconfig-cli.js -c seeds-prod",
    "mail-templates:compile": "ts-node ./libs/mailer/scripts/compile-templates.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.13",
    "@nestjs/core": "^7.0.13",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/platform-express": "^7.0.13",
    "@nestjs/swagger": "^4.5.6",
    "@nestjs/typeorm": "^7.0.0",
    "@sentry/node": "^5.15.5",
    "bcrypt": "^4.0.1",
    "chalk": "^4.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.4",
    "date-fns": "^2.13.0",
    "dotenv-safe": "^8.2.0",
    "express-rate-limit": "^5.1.3",
    "express-session": "^1.17.1",
    "helmet": "^3.22.0",
    "inline-css": "^2.6.3",
    "logform": "^2.1.2",
    "mandrill-api": "^1.0.45",
    "pg": "^8.2.1",
    "ramda": "^0.27.0",
    "rate-limit-redis": "^1.7.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "swagger-ui-express": "^4.1.4",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.10.1",
    "typeorm": "^0.2.24",
    "uuid": "^8.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.13",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.13",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/faker": "^4.1.12",
    "@types/helmet": "^0.0.47",
    "@types/inline-css": "^0.0.33",
    "@types/jest": "^25.2.2",
    "@types/mandrill-api": "^1.0.30",
    "@types/node": "^14.0.1",
    "@types/ramda": "^0.27.5",
    "@types/rate-limit-redis": "^1.7.1",
    "@types/redis": "^2.8.20",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "faker": "^4.1.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@libs/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@libs/logger": "<rootDir>/libs/logger/src",
      "@libs/mailer/(.*)": "<rootDir>/libs/mailer/src/$1",
      "@libs/mailer": "<rootDir>/libs/mailer/src",
      "@libs/database/(.*)": "<rootDir>/libs/database/src/$1",
      "@libs/database": "<rootDir>/libs/database/src",
      "@libs/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@libs/common": "<rootDir>/libs/common/src",
      "@libs/testing/(.*)": "<rootDir>/libs/testing/src/$1",
      "@libs/testing": "<rootDir>/libs/testing/src"
    }
  }
}